doctype 5
html.
	<head>
		<meta charset="utf8">
		<base href="/">
		<title>Fresh Prints Tech Challenge</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
		<link rel="stylesheet" href="/css/app.css">

	</head>

	<body ng-app="myApp">
		<div ng-controller="AppCtrl as app" ng-cloak>
			<!-- INSERT HTML CODE HERE -->
			<form id="quoteform" class="form" action='/api/quote' method="POST">
				<h3>Get a Quote</h3>
				<div class="form-group">
					<label> Style Code</label>
					<select ng-options="item as item.style_code for item in app.data track by item.style_code" ng-model="app.selected" 
					ng-change="app.update()" name = "style_code" form ="quoteform">
					</select>
				</div>

				<div class="form-group">
					<label> Color</label>
					<select name="color_code" form="quoteform">
						<option ng-repeat="color in app.colors">
							{{color}}
						</option>
					</select>
				</div>
			
				<div class="form-group">
					<label> Size</label>
					<select name ="size_code" form="quoteform">
						<option ng-repeat="size in app.sizes">
							{{size}}
						</option>
					</select>
				</div>
				<div class="form-group">
					<label>Quantity</label>
					<input type="text" placeholder="Quantity" name="quantity">
				</div>
				<input type="text" name="weight" ng-model="app.weight" style="display:none">
				<input class="btn btn-submit" type="submit" value="Submit">
			</form>
		</div>
			
			
		<script src="js/lib/angular/angular.js"></script>
		<script src="js/app.js"></script>
		<script src="js/services.js"></script>
		<script src="js/controllers.js"></script>
		<script src="js/filters.js"></script>
		<script src="js/directives.js"></script>

	</body>